<article class="post">
  <h1><%= it.post.title %></h1>
  
  <% if (it.post.content) { %>
    <div x-data="{ open: false }">
    <button @click="open = !open">Expand</button>
        <span x-show="open" x-transition x-cloak>
           <div class="content"><%= it.post.content %></div>
        </span>
    </div>
  <% } else { %>
    <p>No content available</p>
  <% } %>

  <footer>
    Post ID: <strong><%= it.post.id %></strong>
  </footer>
</article>